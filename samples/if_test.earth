// expected: x < 10 and y > 10
x = 8
let y: int = 12
when x > 10{
    when y > 10{
        _ = println("x > 10 and y > 10")
    }
    else{
        _ = println("x > 10 and y <= 10")
    }
}
else when x < 10{
    when y > 10{
        _ = println("x < 10 and y > 10")
    }
    else{
        _ = println("x < 10 and y <= 10")
    }
}
else{
    _ = println("x == 10")
}

// expected: both match
let word: str = "hello"
let number: int = 3
when word == "hello" && number == 3{
    _ = println("both match")
}
else when word == "hello"{
    _ = println("only string matches")
}
else{
    _ = println("no match")
}

// Unreachable code, expected: greater than 5
x = 10
when x > 5{
    _ = println("greater than 5")
}
else when x > 8{
    _ = println("greater than 8")
}
else{
    _ = println("default case")
}

// Boolean Conditions, expected: sunny and calm

let is_sunny: bool = true
let is_windy: bool = false
when is_sunny && !is_windy{
    _ = println("sunny and calm")
}
else when is_sunny && is_windy{
    _ = println("sunny but windy")
}
else{
    _ = println("not sunny")
}

